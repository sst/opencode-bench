{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": ".",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"]
    },
    "types": ["bun-types", "node"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "*.ts",
    "agents/**/*.ts",
    "metrics/**/*.ts",
    "lib/**/*.ts",
    "config/**/*.ts",
    "scripts/**/*.ts",
    "tests/**/*.ts",
    "types/**/*.ts",
    "types/**/*.d.ts",
    "src/tasks/**/*.ts"
  ],
  "exclude": ["dist", "node_modules"]
}
